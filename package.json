{
    "name": "gt-racer-insanity",
    "private": true,
    "version": "1.1.0",
    "description": "Multiplayer arcade racing game powered by Bun, React Three Fiber, and Socket.IO.",
    "author": "Ragaeeb Haq (https://github.com/ragaeeb)",
    "license": "MIT",
    "licenseFile": "LICENSE.md",
    "homepage": "https://github.com/ragaeeb/gt-racer-insanity#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/ragaeeb/gt-racer-insanity.git"
    },
    "bugs": {
        "url": "https://github.com/ragaeeb/gt-racer-insanity/issues"
    },
    "keywords": [
        "bun",
        "multiplayer",
        "racing-game",
        "react-three-fiber",
        "socket.io",
        "threejs",
        "typescript"
    ],
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "server": "bun --watch src/server/index.ts",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "e2e": "bun run build && RUN_E2E=true bun test testing/e2e.test.ts",
        "test:e2e": "bun run e2e",
        "test:e2e:install": "playwright install chromium",
        "check": "bun run test && bun run build",
        "release": "semantic-release"
    },
    "engines": {
        "node": ">=25.0.0",
        "bun": ">=1.3.9"
    },
    "packageManager": "bun@1.3.9",
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/bun": "^1.3.9",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "@types/three": "^0.183.1",
        "@vitejs/plugin-react": "^5.1.4",
        "playwright": "^1.58.2",
        "semantic-release": "^25.0.3",
        "typescript": "^5.9.3",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@react-three/fiber": "^9.5.0",
        "@socket.io/bun-engine": "^0.1.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "socket.io": "^4.8.3",
        "socket.io-client": "^4.8.3",
        "three": "^0.183.1"
    }
}
